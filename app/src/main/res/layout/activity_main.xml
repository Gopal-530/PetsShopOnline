<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginRight="10sp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/sttng"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90sp"
                android:src="@drawable/sttng" />

            <ImageView
                android:id="@+id/login"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50sp"
                android:src="@drawable/profle" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10sp"
                android:src="@drawable/whatsapp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/yellow_dark_color"
                android:fontFamily="@font/poppinsemibold"
                android:text="Category"
                android:textSize="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/orange_dark_color"
                android:fontFamily="@font/poppinsemibold"
                android:text="Post your free ad"
                android:textSize="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/become_a_seller"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/sky_blue"
                android:fontFamily="@font/poppinsemibold"
                android:text="Become seller"
                android:textSize="10dp" />


        </LinearLayout>


    </LinearLayout>


    <!--

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation_menu" />
    -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/ll1">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="5">


        <LinearLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsemibold"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_home"
                android:layout_width="match_parent"

                android:layout_height="2dp"
                android:background="@color/light_blue_color">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/btm_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsemibold"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_category"
                android:layout_width="match_parent"

                android:layout_height="2dp"
                android:background="@color/light_blue_color">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/btm_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsemibold"
                android:text="Place Your Add"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_post_add"
                android:layout_width="match_parent"

                android:layout_height="2dp"
                android:background="@color/light_blue_color">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/btm_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsemibold"
                android:text="My Account"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_my_acc"
                android:layout_width="match_parent"

                android:layout_height="2dp"
                android:background="@color/light_blue_color">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/btm_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsemibold"
                android:text="Cart"
                android:textColor="@color/black"

                android:textSize="10sp" />

            <View
                android:id="@+id/view_cart"
                android:layout_width="match_parent"

                android:layout_height="2dp"
                android:background="@color/light_blue_color">

            </View>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>