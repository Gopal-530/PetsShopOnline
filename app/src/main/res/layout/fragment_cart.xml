<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/page_title"
                android:orientation="vertical"
                android:layout_height="85dp">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/my_acc"
                    android:textSize="20sp"

                    android:fontFamily="@font/poppinsemibold"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/layout_bg_cart"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivImgee"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:padding="7dp"
                            android:visibility="invisible"
                            android:src="@drawable/ic_baseline_delete_outline_24"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="12sp"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:orientation="vertical"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/prod_name"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.7"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textSize="12sp"

                                android:gravity="center"
                                android:text="Procuct"
                                android:fontFamily="@font/poppinsmedium"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Price"
                            android:gravity="center"
                            android:fontFamily="@font/poppinsmedium"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="match_parent"
                            android:padding="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"

                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:text="Quantity"
                                android:gravity="center"
                                android:fontFamily="@font/poppinsmedium"/>


                        </LinearLayout>




                        <TextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Total"
                            android:gravity="center"
                            android:fontFamily="@font/poppinsmedium"/>

                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="1dp">

                </View>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:background="@null"

                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="apply coupen"
                        android:textSize="12sp"
                        android:background="@color/light_blue_color"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </Button>


                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"

                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="match_parent"
                    android:text="Update cart"
                    android:backgroundTint="@color/light_blue_color"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_bg_new"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sub Total"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center_vertical"
                            android:text="$800"
                            android:textColor="@color/darkgray">

                        </TextView>

                    </RelativeLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/lightgrey"
                    android:layout_height="1dp">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sub Total"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center_vertical"
                            android:text="$30"
                            android:textColor="@color/darkgray">

                        </TextView>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/lightgrey"
                    android:layout_height="1dp">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sub Total"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="$830"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent">

                        </TextView>

                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"

                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="match_parent"
                    android:text="proceed to checkout"
                    android:backgroundTint="@color/light_blue_color"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>


        </LinearLayout>






    </androidx.core.widget.NestedScrollView>








</LinearLayout>