<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/page_title"
        android:orientation="vertical"
        android:layout_height="125dp">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/post_free_ad"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsemibold"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/categories1"
                    android:layout_height="match_parent">

                </ImageView>




                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/taxi"
                    android:layout_height="match_parent">

                </ImageView>




                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/categories2"
                    android:layout_height="match_parent">

                </ImageView>



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Category:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@color/yellow"
                        android:text="Pets"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@color/red"
                        android:text="Pet Taxi"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/become_a_seller"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@color/teal_700"
                        android:text="Pet Mating"
                        android:textSize="10sp" />


                </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Title:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sub Title:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Breed Name"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Description:"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="100dp">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Location:"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Area:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Emirates:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/layout_bg_new"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Delivery Option:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Pick Up From Seller Location"
                        android:layout_height="wrap_content">

                    </CheckBox>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Free Delevery"
                        android:layout_height="wrap_content">

                    </CheckBox>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Delevery With Charges"
                        android:layout_height="wrap_content">

                    </CheckBox>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Select Video:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="55dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:text="Choose File"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorE"
                        android:layout_height="match_parent">

                    </Button>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="No file chosen"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Select Image:"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsemibold"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="55dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:text="Choose File"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorE"
                        android:layout_height="match_parent">

                    </Button>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="No file chosen"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="match_parent"
                        android:text="submit"
                        android:backgroundTint="@color/light_blue_color"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content">

                    </Button>
                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>





    </LinearLayout>



</LinearLayout>